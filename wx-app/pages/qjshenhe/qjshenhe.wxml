<view class="container">
  <view wx:for="{{ leaveApplications }}" wx:key="{{ index }}">
    <view class="leave-application">
      <view class="leave-application-header">
        <text class="name">{{ item.name }}</text>
        <text class="reason">{{ item.reason }}</text>
      </view>
      <view class="divider"></view>
      <view class="button-group">
        <button class="approve-btn" bindtap="approveLeave" data-index="{{ index }}">通过</button>
        <button class="reject-btn" bindtap="rejectLeave" data-index="{{ index }}">拒绝</button>
      </view>
    </view>
  </view>
</view>